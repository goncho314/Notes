<p id="notice"><%= notice %></p>

<h1>Collections</h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.user.username %></td>
        <td>
          <% if collection.title.length>30 %>
            <%= collection.title.text[0..29]+'...' %>
          <% else %>
            <%= collection.title%>
          <% end %> 
        </td>
        <td>
          <div class="btn-group">
          <%= button_to 'Show', collection, :class => "btn btn-primary", :method => :get %>
          <%= button_to 'Edit', edit_collection_path(collection), :class => "btn btn-success", :method => :get  %>
          <%= button_to 'Destroy', collection, :class => "btn btn-danger", :method => :get  %>
          Share
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'New Collection', new_collection_path, :class => "btn btn-primary", :method => :get %>
