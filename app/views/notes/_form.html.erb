  <div class="field">
    <%= label_tag :image %>
    <%= form.file_field :image, :class => "btn btn-primary"%>
  </div>

  <br>

  <div class="actions">
    <%= button_tag "Submit", :class => "btn btn-primary", :type => "submit" %> 
  </div>
</div>
<% end %>
