<div class="container col-md-5">
	<h1>Editing Note</h1>
</div>
<%= render 'form', note: @note %>
<div class="container col-md-5">
	<div style="overflow-y:auto;max-height:60vh">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Username</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<% if @current_user.friends_with?(user) %>
				<tr>
					<td>
						<%= user.username %>							
					</td>
					<td>
						<% if user.note_ids.include? @note.id %>
							<%= button_to 'Stop sharing', stopsharing_note_path(@note.id, user.id), :class => "btn btn-danger", :method => :get  %>
						<% else %>
							<%= button_to 'Share', share_note_path(@note.id, user.id), :class => "btn btn-success", :method => :get  %>
						<% end %>
					</td>
				</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
	<%= link_to 'Show', @note %> |
	<%= link_to 'Back', notes_path %>
</div>