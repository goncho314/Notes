<div class="container-fluid">
  <div class="row">
  <div class="col-md-3" >
    <h1>Users</h1>
    <div style="overflow-y:auto;max-height:82vh">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Username</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% if @current_user.username != user.username %>
            <tr>
              <td><%= user.username %></td>
              <td><%= button_to "Remove", destroy_admin_path(user.id), :class => "btn btn-danger", :method => :get%>              	
            </tr>
          <% end %>
        <% end %>

      </tbody>
    </table>  
  </div>
  </div>
  <div class="col-md-3">
    <h1>Notes</h1>
    <div style="overflow-y:auto;max-height:82vh">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Note</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @notes.each do |note| %>
            <tr>
              <td>
              	<% if note.text.length>30 %>
		            <%= note.text[0..29]+'...' %>
		        <% else %>
		            <%= note.text%>
		        <% end %> 
              </td>
              <td><%= button_to "Remove", destroy_note_admin_path(note.id), :class => "btn btn-danger", :method => :get %>
              </td>
            </tr>
        <% end %>        
      </tbody>
    </table>  
  </div>
  </div>
  <div class="col-md-3">
    <h1>Collections</h1>
    <div style="overflow-y:auto;max-height:82vh">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @collections.each do |collection| %>
            <tr>
              <td>
              	<% if collection.title.length>30 %>
		            <%= collection.title[0..29]+'...' %>
		        <% else %>
		            <%= collection.title%>
		        <% end %> 
              </td>
              <td><%= button_to "Remove", destroy_collection_admin_path(collection.id), :class => "btn btn-danger", :method => :get %>
              </td>
            </tr>
        <% end %>        
      </tbody>
    </table>
  </div>
  </div>
  <div class="col-md-3">
    <h1>Friendships</h1>
    <div style="overflow-y:auto;max-height:82vh">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Username</th>
          <th>Username</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      	<% if not @friendships.nil? %>
	        <% @friendships.each do |friendship| %>
	          <tr>
	            <td><%= friendship[:user1].username %></td>
	            <td><%= friendship[:user2].username %></td>
	            <td><%= button_to "Remove", removefriend_user_admin_path(friendship[:user1].id, friendship[:user2].id), :class => "btn btn-danger", :method => :get %>
	            </td>
	          </tr>
	        <% end %>
	    <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>